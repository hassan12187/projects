@model IEnumerable<Hr_Vacancy_Managment.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Create New Employee
</button>
<table class="table table-striped table-bordered mt-2" style="overflow-x:scroll">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created_At)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Depart_ID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Status)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Created_At)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.department.Department_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Emp_Edit", new {  id=item.Employee_ID }) |
                @* @Html.ActionLink("Details", "Details", new { id=item.PrimaryKey }) | *@
                @Html.ActionLink("Delete", "Delete", new { id=item.Employee_ID })
            </td>
        </tr>
}
    </tbody>
</table>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Employee</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Employee_Name" class="control-label fw-bold">Employee Name</label>
                        <input name="Employee_Name" placeholder="Enter Employee Name" id="Employee_Name" class="form-control" />
                    </div>
                    <div class="form-group mt-1">
                        <label for="Depart_ID" class="control-label fw-bold">Department</label>
                        <select name="Depart_ID" class="form-select" id="Depart_ID" asp-items="ViewBag.departments">
                            <option hidden>Select Any Department</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <input type="submit" name="" class="btn btn-secondary my-2" value="Enter">
                </div>
            </form>
        </div>
    </div>
</div>
