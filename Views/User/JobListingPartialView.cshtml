@using Hr_Vacancy_Managment.Helper
@model Hr_Vacancy_Managment.Models.ViewModel.DepartmentAndVacancyViewModel
@foreach (var data in Model.vacancy)
{
    <div class="single-job-items mb-30">
        <div class="job-items">
            <div class="company-img">
                <a href="#"><img src="~/Webassets/img/icon/job-list1.png" alt=""></a>
            </div>
            <div class="job-tittle job-tittle2">
                <a href="#">
                    <h4>@data.Vacancy_Title</h4>
                </a>
                <ul>
                    <li>@data.Departments.Department_Name</li>
                    <li><i class="fas fa-map-marker-alt"></i>Athens, Greece</li>
                    <li>@data.salary</li>
                </ul>
            </div>
        </div>
        <div class="items-link items-link2 f-right">
            <a href="#">@data.Timing</a>
            <a asp-action="Form" asp-route-id="@data.Vacancy_ID" style="border:none;background:none;"><button class="btn">Apply</button></a>
            <span>Posted: @TimeHelper.GetTimeAgo(data.Date_Of_Creation)</span>
        </div>
    </div>
}
<h1>@TempData["noData"]</h1>